@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<AuthorizeView>
    <Authorized>
        <p>Hello, @context.User.Identity?.Name!</p>
        <p>Click <NavLink href="counter">here</NavLink> to see the counter.</p>
        @foreach (var claim in context.User.Claims)
        {
            <p>@claim.Type @claim.Value</p>
        }
    </Authorized>
    <NotAuthorized>
        <p>You are not signed in.</p>
        <p>Click <NavLink href="signin">here</NavLink> to sign in.</p>
    </NotAuthorized>
</AuthorizeView>
